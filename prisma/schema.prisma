// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// using supabase 
datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

// item model 
model product {
  url           String @unique @id
  title         String
  image         String
  currentPrice  Float
  originalPrice Float
  currency      String
  priceHistory  Float[]
  discount      String
  reviewCount   Int
  stars         Int
  inStock       Boolean
  lowestPrice   Float
  highestPrice  Float
}

